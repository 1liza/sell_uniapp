.ratingselect {
  padding: 18px 18px 0 18px;
  font-size: 0;
  border-bottom: 1px solid rgba(7,17,27,0.1);
}
.ratingselect .ratting-type {
  padding-bottom: 18px;
  border-bottom: 1px solid rgba(7,17,27,0.1);
}
.ratingselect .ratting-type .block {
  display: inline-block;
  padding: 8px 12px;
  margin-right: 8px;
  color: #4d555d;
  font-size: 12px;
  line-height: 18px;
}
.ratingselect .ratting-type .block.active {
  color: #fff;
}
.ratingselect .ratting-type .block .count {
  margin-left: 2px;
  font-size: 8px;
}
.ratingselect .ratting-type .block.positive {
  background: rgba(0,160,220,0.2);
}
.ratingselect .ratting-type .block.positive.active {
  background: #00a0dc;
}
.ratingselect .ratting-type .block.negative {
  background: rgba(77,85,93,0.2);
}
.ratingselect .ratting-type .block.negative.active {
  background: #4d555d;
}
.ratingselect .switch {
  padding: 12px 18px;
  line-height: 24px;
  color: #93999f;
  height: 24px;
}
.ratingselect .switch.on .check {
  color: #00c850;
}
.ratingselect .switch .check {
  display: inline-block;
  font-size: 24px;
  padding-right: 4px;
}
.ratingselect .switch .text {
  font-size: 12px;
  line-height: 24px;
  vertical-align: top;
}

